<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
	
  <ItemGroup>
	  <EmbeddedResource Include="UIComponents\**\*.cshtml" Pack="true" />
	  <EmbeddedResource Include="Views\**\*.cshtml" Pack="true" />
	  <EmbeddedResource Include="Root\**" Pack="true" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Views\_Imports.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Root\css\uic.scss" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="6.0.26" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\UIComponents.Generators\UIComponents.Generators.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="UIComponents\Group\Div.cshtml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Css\" />
  </ItemGroup>

 
</Project>
