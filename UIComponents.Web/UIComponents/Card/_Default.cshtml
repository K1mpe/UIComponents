@using CDCPortal.DA.UIComponents.Interfaces;
@model Card


<cdc-card cs="@Model">
    @if(Model is CardUIComponent uicCard)
    {
        @foreach(var button in uicCard.Buttons)
        {
            button.AddAttribute("class", "btn-tool");
            <cdc-card-tool>
                @await button.InvokeAsync(Component)
            </cdc-card-tool>
        }

        @foreach (var element in uicCard.CardElements)
        {
            @await element.InvokeAsync(Component)
        }
    }
    
</cdc-card>

